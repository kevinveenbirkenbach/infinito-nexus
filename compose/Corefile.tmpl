.:53 {
  template IN A {
    match ^${DOMAIN_RE}\.$
    answer "{{ .Name }} 60 IN A ${IP4}"
    fallthrough
  }

  template IN A {
    match ^(.*)\.${DOMAIN_RE}\.$
    answer "{{ .Name }} 60 IN A ${IP4}"
    fallthrough
  }

  template IN AAAA {
    match ^${DOMAIN_RE}\.$
    fallthrough
  }

  template IN AAAA {
    match ^(.*)\.${DOMAIN_RE}\.$
    fallthrough
  }

  forward . 1.1.1.1 8.8.8.8
  log
  errors
}
