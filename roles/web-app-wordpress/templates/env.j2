WORDPRESS_DB_HOST=      "{{ lookup('database', application_id, want='host') }}:{{ lookup('database', application_id, want='port') }}"
WORDPRESS_DB_USER=      "{{ lookup('database', application_id, want='username') }}"
WORDPRESS_DB_PASSWORD=  {{ lookup('database', application_id, want='password') | dotenv_quote }}
WORDPRESS_DB_NAME=      "{{ lookup('database', application_id, want='name') }}"

# Debug flags
WP_DEBUG={{ MODE_DEBUG | lower }}
WP_DEBUG_LOG={{ MODE_DEBUG | lower }}
WP_DEBUG_DISPLAY={{ MODE_DEBUG | lower }}
