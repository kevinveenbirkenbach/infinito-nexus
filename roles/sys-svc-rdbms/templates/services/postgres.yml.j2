{# This template needs to be included in docker-compose.yml, which depend on a postgres database #}

{% if not lookup('database', application_id, want='shared') %}  
  {{ lookup('database', application_id, want='host') }}:
    image: {{ lookup('database', application_id, want='image') }}:{{ lookup('database', application_id, want='version') }}
    container_name: {{ application_id | get_entity_name }}-database
    env_file:
      - {{ lookup('database', application_id, want='env') }}
    restart: {{ DOCKER_RESTART_POLICY }}
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ lookup('database', application_id, want='username') }}"]
      interval: 10s
      timeout: 5s
      retries: 6
    volumes:
      - type:   volume
        source: database
        target: /var/lib/postgresql/data
    networks:
      - default
{% endif %}
{{ "\n" }}