# App basics
APP_SCHEME="{{ lookup('tls_resolve', application_id, want='protocols.web') }}"
APP_DOMAIN="{{ CHESS_DOMAIN }}"
APP_ADMIN_URL="{{ CHESS_ADMIN_URL }}"
APP_ADMIN_EMAIL="{{ CHESS_ADMIN_EMAIL }}"
APP_KEY_FILE="{{ CHESS_APP_KEY_FILE }}"
APP_HMAC_SECRET="{{ CHESS_HMAC_SECRET }}"
NODE_ENV="{{ ENVIRONMENT }}"
PORT="{{ container_port }}"

# PostgreSQL (libpq envs)
PGHOST="{{ lookup('database', application_id, want='host') }}"
PGPORT="{{ lookup('database', application_id, want='port') }}"
PGDATABASE="{{ lookup('database', application_id, want='name') }}"
PGUSER="{{ lookup('database', application_id, want='username') }}"
PGPASSWORD={{ lookup('database', application_id, want='password') | dotenv_quote }}
