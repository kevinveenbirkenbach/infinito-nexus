# Environment File for Matomo 
# @see https://hub.docker.com/_/matomo/

MATOMO_DATABASE_HOST="{{ lookup('database', application_id, 'host') }}:{{ lookup('database', application_id, 'port') }}"
MATOMO_DATABASE_ADAPTER="mysql"
MATOMO_DATABASE_USERNAME="{{ lookup('database', application_id, 'username') }}"
MATOMO_DATABASE_PASSWORD={{ lookup('database', application_id, 'password') | dotenv_quote }}
MATOMO_DATABASE_DBNAME="{{ lookup('database', application_id, 'name') }}"
