{% include 'roles/sys-svc-compose/templates/base.yml.j2' %}
  {{ MATOMO_SERVICE }}:
    container_name:  {{ MATOMO_NAME }}
{% set container_port = 80 %}
{% include 'roles/sys-svc-container/templates/base.yml.j2' %}
    image: "{{ MATOMO_IMAGE }}:{{ MATOMO_VERSION }}"
    ports:
      - "{{ DOCKER_BIND_HOST }}:{{ ports.localhost.http[application_id] }}:{{ container_port }}"
    volumes:
      - data:/var/www/html
    healthcheck:
      test:
        - CMD-SHELL
        - |
          code="$(curl -s --max-time 5 -o /dev/null -w '%{http_code}' http://localhost/index.php || echo 000)"
          [ "$code" = "200" ] || [ "$code" = "302" ]
      interval: 10s
      timeout: 5s
      retries: 12
      start_period: 30s
{% include 'roles/sys-svc-container/templates/depends_on/dmbs_excl.yml.j2' %}
{% include 'roles/sys-svc-container/templates/networks.yml.j2' %}

  {{ MATOMO_BOOTSTRAP_SERVICE }}:
{% set docker_restart_policy = 'no' %}
{% set docker_compose_env = MATOMO_BOOTSTRAP_ENV_FILE %}
{% include 'roles/sys-svc-container/templates/base.yml.j2' %}
{% set docker_compose_env = '' %}
{% set docker_restart_policy = DOCKER_RESTART_POLICY %}
    profiles:
      - "{{ MATOMO_BOOTSTRAP_PROFILE }}"
    container_name: {{ MATOMO_BOOTSTRAP_NAME }}
    image: "{{ MATOMO_BOOTSTRAP_IMAGE }}:{{ MATOMO_BOOTSTRAP_VERSION }}"
    depends_on:
      {{ MATOMO_SERVICE }}:
        condition: service_healthy

{{ applications | compose_volumes(
    application_id,
    database_volume=lookup('database', application_id, 'volume'),
    extra_volumes={'data': {'name': MATOMO_DATA}}
) }}
{% include 'roles/sys-svc-compose/templates/networks.yml.j2' %}
