{% include 'roles/sys-svc-compose/templates/base.yml.j2' %}
  celeryworker:
    # Celery workers handle background tasks (such file imports or federation
    # messaging). The more processes a worker gets, the more tasks
    # can be processed in parallel. However, more processes also means
    # a bigger memory footprint.
    # By default, a worker will span a number of process equal to your number
    # of CPUs. You can adjust this, by explicitly setting the --concurrency
    # flag:
    #   celery -A funkwhale_api.taskapp worker -l INFO --concurrency=4
{% include 'roles/docker-container/templates/base.yml.j2' %}
    image: "{{ FUNKWHALE_API_IMAGE }}:{{ FUNKWHALE_API_VERSION }}"
    command: celery -A funkwhale_api.taskapp worker -l INFO --concurrency={{FUNKWHALE_CELERYD_CONCURRENCY}}
    environment:
      - C_FORCE_ROOT=true
    volumes:
      - "media:{{ FUNKWHALE_MEDIA_DIR }}"
      - "static:{{ FUNKWHALE_STATIC_DIR }}"
      - "music:{{ FUNKWHALE_MUSIC_DIR }}:ro"
{% include 'roles/docker-container/templates/depends_on/dmbs_excl.yml.j2' %}
{% include 'roles/docker-container/templates/networks.yml.j2' %}

  celerybeat:
{% include 'roles/docker-container/templates/base.yml.j2' %}
    image: "{{ FUNKWHALE_API_IMAGE }}:{{ FUNKWHALE_API_VERSION }}"
    command: celery -A funkwhale_api.taskapp beat --pidfile= -l INFO
    volumes:
      - "media:{{ FUNKWHALE_MEDIA_DIR }}"
      - "static:{{ FUNKWHALE_STATIC_DIR }}"
      - "music:{{ FUNKWHALE_MUSIC_DIR }}:ro"
{% include 'roles/docker-container/templates/depends_on/dmbs_excl.yml.j2' %}
{% include 'roles/docker-container/templates/networks.yml.j2' %}

  api:
{% include 'roles/docker-container/templates/base.yml.j2' %}
    image: "{{ FUNKWHALE_API_IMAGE }}:{{ FUNKWHALE_API_VERSION }}"
    volumes:
      - "music:{{ FUNKWHALE_MUSIC_DIR }}:ro"
      - "media:{{ FUNKWHALE_MEDIA_DIR }}"
      - "static:{{ FUNKWHALE_STATIC_DIR }}"
    ports:
      - "{{ FUNKWHALE_DOCKER_API_PORT }}"
{% include 'roles/docker-container/templates/depends_on/dmbs_excl.yml.j2' %}
{% include 'roles/docker-container/templates/networks.yml.j2' %}

  front:
{% include 'roles/docker-container/templates/base.yml.j2' %}
    image: "{{ FUNKWHALE_FRONT_IMAGE }}:{{ FUNKWHALE_FRONT_VERSION }}"
    depends_on:
      - api
    environment:
      - "NGINX_MAX_BODY_SIZE=100M"
    volumes:
      - "media:{{ FUNKWHALE_MEDIA_DIR }}:ro"
      - "static:{{ FUNKWHALE_STATIC_DIR }}:ro"
    ports:
      - "{{ DOCKER_BIND_HOST }}:{{ ports.localhost.http[application_id] }}:80"
  
  typesense:
{% include 'roles/docker-container/templates/base.yml.j2' %}
    image: "{{ FUNKWHALE_TYPESENSE_IMAGE }}:{{ FUNKWHALE_TYPESENSE_VERSION }}"
    volumes:
      - ./typesense/data:/data
    command: --data-dir /data --enable-cors
    profiles:
      - typesense

{{ applications | compose_volumes(
    application_id,
    database_volume=lookup('database', application_id, want='volume'),
    extra_volumes={'media': {}, 'music': {}, 'static': {}}
) }}
{% include 'roles/sys-svc-compose/templates/networks.yml.j2' %}
