YOURLS_DB_HOST: "{{ lookup('database', application_id, want='host') }}"
YOURLS_DB_USER: "{{ lookup('database', application_id, want='username') }}"
YOURLS_DB_PASS: "{{ lookup('database', application_id, want='password') }}"
YOURLS_DB_NAME: "{{ lookup('database', application_id, want='name') }}"
YOURLS_SITE:    "{{ lookup('tls_resolve', application_id, want='url.base') }}"
YOURLS_USER:    "{{ YOURLS_USER }}"
YOURLS_PASS:    "{{ YOURLS_PASSWORD }}"
# The following deactivates the login mask for admins, if the oauth2 proxy is activated 
YOURLS_PRIVATE: "{{not (applications | get_app_conf(application_id, 'docker.services.oauth2.enabled', False)) }}" 